<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizMaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .quizMasterLogo{
            width:60px;
        }
    .navbarLogo{
        }
    .searchBox{
        position:absolute;
        left:40%;
        }
      
    </style>
</head>

<body>
    <header>
        <nav hidden class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div hidden class="collapse navbar-collapse" id="navbarColor01">
                <a hidden class="navbarLogo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img hidden class="quizMasterLogo" src="https://pbs.twimg.com/media/Eazli8OWkAMrM4T?format=png&name=240x240" />
                </a>
                <button hidden class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div hidden class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul hidden class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li hidden class="nav-item">
                            <a hidden class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>                       
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
